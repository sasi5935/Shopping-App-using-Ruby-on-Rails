<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1>New Cushion</h1>
      <%= bootstrap_form_with model: @cushion, local: true do |f| %>
        <%= f.text_field :name %>
        <%= f.file_field :image, direct_upload: true %>
        <%= f.number_field :price, step: '0.01', class: 'form-control' %>
        <%= f.text_field :shape %>
        <%= f.text_field :emoji_type %>
        <%= f.submit "Create Cushion", class: "btn btn-success" %>
      <% end %>

      <%= link_to 'Back to list', home_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
